<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FF6B9DFF"
    android:padding="16dp">

    <!-- Header con icono y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_lock_idle_alarm"
            android:tint="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/alarm_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Es hora de despertar!"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Contenedor de la pregunta con fondo redondeado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/question_background"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🧠"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/alarm_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta"
            android:textSize="20sp"
            android:textColor="#333333"
            android:gravity="center"
            android:textStyle="bold"
            android:minLines="2"
            android:maxLines="4" />

    </LinearLayout>

    <!-- ScrollView para las opciones en caso de que sean muchas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Opciones de respuesta con colores vibrantes -->
            <Button
                android:id="@+id/option_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opción A"
                android:textSize="16sp"
                android:backgroundTint="#FF6B9DFF"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:elevation="8dp"
                android:minHeight="60dp"
                android:gravity="center|start"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/option_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opción B"
                android:textSize="16sp"
                android:backgroundTint="#FFFF8A80"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:elevation="8dp"
                android:minHeight="60dp"
                android:gravity="center|start"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/option_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opción C"
                android:textSize="16sp"
                android:backgroundTint="#FFFFD600"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:elevation="8dp"
                android:minHeight="60dp"
                android:gravity="center|start"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/option_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opción D"
                android:textSize="16sp"
                android:backgroundTint="#FF00C853"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:elevation="8dp"
                android:minHeight="60dp"
                android:gravity="center|start"
                android:textAlignment="viewStart" />

        </LinearLayout>
    </ScrollView>

</LinearLayout> 